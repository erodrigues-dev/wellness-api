{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDirs": ["./"],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@database/*": ["./shared/database/models/*"]
    }
  },
  "include": ["src"]
}
