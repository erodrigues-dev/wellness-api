{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDirs": ["./"],
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": ["src"]
}
