{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDirs": ["src"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["src/shared/database/migrations"]
}
