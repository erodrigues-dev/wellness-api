{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["standard"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 2],
        "space-before-function-paren": "off",
        "curly": ["error", "multi-line"]
    }
}
